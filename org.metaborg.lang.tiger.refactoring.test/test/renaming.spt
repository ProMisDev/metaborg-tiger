module renaming

language TigerRefactoring


test rename variable without type [[
let
	var msg := "Hello World"
in 
	print(msg)
end
]] run rename-test-var-no-type to [[
let
	var message := "Hello World"
in 
	print(message)
end
]]

test rename variable with type [[
let
	var msg : string := "Hello World"
in 
	print(msg)
end

]] run rename-test-var-no-type to [[
let
	var message : string := "Hello World"
in 
	print(message)
end

]]

test rename variable with capture [[
let 
	var x := 10
	var r := 
	  let
		  var y := 100
	  in 
		  x + y
		end
  in
  	r
end
]] run rename-test-var-capture
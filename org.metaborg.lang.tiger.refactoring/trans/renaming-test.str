rules
	get-declaration-test(|target-name, namespace): VarDecNoType(name, exp) -> dec-occ
	where
		<eq> (<strip-annos> target-name, <strip-annos> name) 
    ; dec-occ := <nabl2-mk-occurrence(|namespace)> name
    